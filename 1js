componentDidMount() {
  const accountStatus = localStorage.getItem(constantValues.ACCOUNT_STATUS);
  const isReact = getValueFromActivationCookie(constantValues.IS_REACTIVATION);
  const flow = getValueFromActivationCookie(constantValues.FLOW);

  const shouldForceCreateAccount =
    (accountStatus === constantValues.DUMMY_ACCOUNT || authDetailDataUtil.isDummyWithRealEmailSet()) &&
    (flow === constantValues.REACTIVATION_TYPE ||
      isReact ||
      flow === constantValues.UPGRADE_TYPE ||
      flow === constantValues.NEW_ACTIVATION_TYPE ||
      flow === constantValues.EXTERNAL_TYPE ||
      flow === constantValues.INTERNAL_TYPE);

  if (shouldForceCreateAccount) {
    // Hide login tab (li element that contains #home-tab)
    const loginTab = document.querySelector('#home-tab')?.parentElement;
    loginTab?.classList.add('d-none');

    // Deactivate login panel
    document.querySelector('#tab1')?.classList.remove('active', 'show');

    // Activate create account tab
    const createTab = document.querySelector('#profile-tab');
    createTab?.classList.add('active');
    createTab?.setAttribute('aria-selected', 'true');

    // Show create account panel
    const createPanel = document.querySelector('#tab2');
    createPanel?.classList.add('active', 'show');

    // Optional: set focus to first input inside create account form
    const focusable = createPanel?.querySelector('input, button, [tabindex]:not([tabindex="-1"])');
    if (focusable) {
      setTimeout(() => focusable.focus(), 0);
    }
  }
}