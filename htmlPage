const lastNameInputHandler = async (e, i) => {
    const { value } = e.target;
    const isCursorMovedOut = e.type === "blur";
    if (isCursorMovedOut && _.isEmpty(value)) {
      setLastNameStatus("error");
      setLastNameValidationMessage(
        props.scriptingJson[constantValues._ERR_MANDATORY_LAST_NAME]
      );
    }
    else {
      setLastNameValidationMessage('');
      setLastNameStatus("");
      setLastName(value);
    }
  };
